<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Ride.
    -->
    <changeSet id="20230706012802-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="ride_user_id"
                                 baseTableName="ride"
                                 constraintName="fk_ride__ride_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>

        <addForeignKeyConstraint baseColumnNames="ride_city_from_id"
                                 baseTableName="ride"
                                 constraintName="fk_ride__ride_city_from_id"
                                 referencedColumnNames="id"
                                 referencedTableName="city"/>

        <addForeignKeyConstraint baseColumnNames="ride_city_to_id"
                                 baseTableName="ride"
                                 constraintName="fk_ride__ride_city_to_id"
                                 referencedColumnNames="id"
                                 referencedTableName="city"/>
    </changeSet>
</databaseChangeLog>
